@model ITicketSystem.Models.ViewModels.TicketVM
@{
    ViewData["Title"] = "Ticket # "+Model.ticket.Id;
}

<form class="container mt-5">
    <input asp-for=@Model.ticket.Id hidden />
    <div class="row d-flex justify-content-center my-2">
        <div class="col-8">
            <h2 class="text-center">Ticket # @Model.ticket.Id</h2>
        </div>
    </div>
    <div class="row d-flex justify-content-center align-items-center my-3">
        <div class="col-8">
            <h2 class="text-center">@Model.ticketType.Title</h2>
        </div>
    </div>
    <div class="row d-flex justify-content-center my-2">
        <div class="col-8">
            <p>@Model.ticketType.Description</p>
        </div>
    </div>
    <div class="row d-flex justify-content-center my-2">
        <div class="col-8">
            <label asp-for="@Model.ticket.Comments"></label>
            <textarea class="form-control" asp-for=@Model.ticket.Comments placeholder="Leave yours comments here..." style="max-height:10rem" cols="60" rows="5" disabled></textarea>
        </div>
    </div>
    <div class="row d-flex justify-content-center my-2">
        <div class="col-8 gy-3">
            <label asp-for="@Model.ticket.Response"></label>
            @if (Model.ticket.Response == null)
            {
                <textarea class="form-control" asp-for=@Model.ticket.Response placeholder="No response yet" style="max-height:10rem" cols="60" rows="5" disabled></textarea>
            }
            else
            {
                <textarea class="form-control" asp-for=@Model.ticket.Response style="max-height:10rem" cols="60" rows="5" disabled></textarea>
            }

        </div>
    </div>
    <div class="row d-flex justify-content-center my-2">
        <div class="col-8 gy-3">
            <p>Status : <b>@Model.ticket.Status</b></p>
        </div>
    </div>
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-4 d-flex justify-content-center">
            <a asp-controller="Ticket" asp-action="Index" class="btn btn-info">Go to My Tickets</a>
        </div>
    </div>
</form>

