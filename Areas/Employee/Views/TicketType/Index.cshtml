@model ITicketSystem.Models.TicketTypeVM
@{
    ViewData["Title"] = "Select Type";
}
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center pt-4">
        @foreach (var item in Model.TicketTypes)
        {
            <div class="card col mx-4" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text text-justify">@item.Description</p>
                    <a asp-controller="Ticket" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Create ticket</a>
                </div>
            </div>
        }

    </div>
</div>

